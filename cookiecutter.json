{
  "author": "Richard Wen",
  "email": "rrwen.dev@gmail.com",
  "include_email": ["yes", "no"],
  "template_name": "template_name",
  "template_description": "template_description",
  "github_user": "rrwen",
  "github_url": "{{'https://github.com/' + cookiecutter.github_user + '/' + cookiecutter.template_name}}",
  "github_short": "{{cookiecutter.github_user + '/' + cookiecutter.template_name}}",
  "tex_title": "tex_title",
  "tex_titlepage": ["yes", "no"],
  "tex_firstname": "{{cookiecutter.author.split(' ')[0]}}",
  "tex_lastname": "{{cookiecutter.author.split(' ')[-1]}}",
  "tex_affil": "{{'Department of Civil Engineering, Ryerson University, Toronto, ON' if cookiecutter.tex_titlepage == 'no' else 'Department of Civil Engineering \\\\ Ryerson University \\\\ Toronto, ON'}}",
  "tex_year": "{% now 'utc', '%Y' %}",
  "tex_short": "{{cookiecutter.template_name.replace(' ', '_').replace('-','_')}}",
  "tex_file": "{{(cookiecutter.tex_firstname + '_' + cookiecutter.tex_lastname + '_' + cookiecutter.tex_year + '_' + cookiecutter.tex_short).lower()}}",
  "tex_fontsize": ["12pt", "11pt", "10pt"],
  "tex_fontstyle": "Times New Roman",
  "tex_margin": "1in",
  "tex_imagefolder": "{% raw %}./img/{% endraw %}",
  "tex_imageformats": ".pdf,.png",
  "include_footer": ["yes", "no"],
  "vars": {
    "tex_documentclass": "{{'[' + ('titlepage,' if cookiecutter.tex_titlepage == 'yes' else '') + 'letterpaper' + ',' + {{cookiecutter.tex_fontsize}} + ']{article}'}}",
    "tex_setmainfont": "{{'{' + cookiecutter.tex_fontstyle + '}'}}",
	"tex_geometry": "{{'{margin=' + cookiecutter.tex_margin + '}'}}",
    "tex_DeclareGraphicsExtensions": "{{'{' + cookiecutter.tex_imageformats + '}'}}",
    "tex_graphicspath": "{{'{{' + cookiecutter.tex_imagefolder + '}}'}}",
	"tex_title": "{{'{' + cookiecutter.tex_title.replace('_','\_') + '}'}}",
	"tex_author": "{{'{' + cookiecutter.author + (' $\\cdot$ ' + cookiecutter.email if cookiecutter.include_email == 'yes' else '') + '}'}}",
	"tex_lfoot": "{{'{' + cookiecutter.vars.author + ' $\\cdot$ ' + cookiecutter.vars.tex_title + '}'}}"
  }
}
